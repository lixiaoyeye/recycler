<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/common_header_layout" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/banner"
                android:layout_width="fill_parent"
                android:layout_height="142dp"
                android:src="@drawable/banner"
                android:scaleType="fitXY"/>


    <health.rubbish.recycler.widget.ExpandGridView
        android:id="@+id/module_gridview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_gravity="center"
        android:horizontalSpacing="0.0dp"
        android:listSelector="#E6F2FF"
        android:verticalSpacing="0.0dp"
        android:scrollbars="none"
        android:numColumns="3"
        android:stretchMode="columnWidth"></health.rubbish.recycler.widget.ExpandGridView>

        </LinearLayout>

    </ScrollView>
</LinearLayout>

