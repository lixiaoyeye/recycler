<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout style="@style/waste_add_linearlayout">

        <TextView
            style="@style/base_text"
            android:layout_width="wrap_content"
            android:text="单号："
            android:textSize="15sp" />

        <TextView
            android:id="@+id/item_waste_id"
            style="@style/text_add_content"
            android:alpha="1"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/item_waste_state"
            style="@style/base_text"
            android:textColor="@color/common_blue"
            android:layout_width="wrap_content"
            android:layout_marginLeft="@dimen/medium_margin_8dp"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout style="@style/waste_add_linearlayout">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                style="@style/base_text"
                android:layout_width="wrap_content"
                android:alpha="0.7"
                android:text="垃圾桶号："
                android:textSize="14sp" />

            <TextView
                android:id="@+id/item_garbagecan_id"
                style="@style/text_add_content"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/medium_margin_8dp"
            android:layout_weight="1">

            <TextView
                style="@style/base_text"
                android:layout_width="wrap_content"
                android:alpha="0.7"
                android:text="时间："
                android:textSize="14sp" />

            <TextView
                android:id="@+id/item_dtm"
                style="@style/text_add_content"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout style="@style/waste_add_linearlayout">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                style="@style/base_text"
                android:layout_width="wrap_content"
                android:alpha="0.7"
                android:text="科室："
                android:textSize="14sp" />

            <TextView
                android:id="@+id/item_room"
                style="@style/text_add_content"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/medium_margin_8dp"
            android:layout_weight="1">

            <TextView
                style="@style/base_text"
                android:layout_width="wrap_content"
                android:alpha="0.7"
                android:text="分类："
                android:textSize="14sp" />

            <TextView
                android:id="@+id/item_waste_type"
                style="@style/text_add_content"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>
    <View
        style="@style/normal_diver"/>
</LinearLayout>