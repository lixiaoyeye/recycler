<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/reatangle_radius_10dp"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin">

    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible">
        <ImageView
            android:id="@+id/setip_img"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:clickable="true"
            android:src="@drawable/info"/>
    </RelativeLayout>

    <EditText
        android:id="@+id/username_edittext"
        android:layout_width="match_parent"
        android:layout_height="@dimen/edittext_height_42dp"
        android:layout_marginTop="200dp"
        android:background="@null"
        android:hint="@string/username_input_hint"
        android:lines="1"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
        android:drawableLeft="@drawable/l2"
        android:drawablePadding="10dp"
        android:textSize="18sp" />

    <View style="@style/white_diver" />

    <EditText
        android:id="@+id/password_edittext"
        android:layout_width="match_parent"
        android:layout_height="@dimen/edittext_height_42dp"
        android:layout_marginTop="@dimen/widget_vertical_margin_12dp"
        android:background="@null"
        android:hint="@string/password_input_hint"
        android:inputType="textPassword"
        android:drawableLeft="@drawable/l1"
        android:drawablePadding="10dp"
        android:lines="1"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
        android:textSize="18sp" />

    <View style="@style/white_diver" />

    <Button
        android:id="@+id/login_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height_42dp"
        android:layout_marginTop="@dimen/margin_20dp"
        android:background="@drawable/reatangle_radius_10dp"
        android:gravity="center"
        android:text="@string/login"
        android:textColor="@android:color/white"
        android:textSize="20sp" />
</LinearLayout>